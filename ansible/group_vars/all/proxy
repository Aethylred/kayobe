# Configuration of HTTP(S) proxies.

# HTTP proxy URL (format: http(s)://[user:password@]proxy_name:port). By
# default no proxy is used.
http_proxy: ""

# HTTPS proxy URL (format: http(s)://[user:password@]proxy_name:port). By
# default no proxy is used.
https_proxy: ""

# Comma-separated list of domains, hostnames, IP addresses and networks for
# which a proxy should not be used. Default value is "localhost,127.0.0.1" if
# either http_proxy or https_proxy is set or an empty string otherwise.
no_proxy: "{% if http_proxy|length > 0 or https_proxy|length > 0 %}localhost,127.0.0.1{% endif %}"
